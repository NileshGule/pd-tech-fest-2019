# COPY NuGet.config ./

WORKDIR /TechTalksConsumer
RUN dotnet restore

#COPY . ./

RUN dotnet publish --configuration Release --output releaseOutput --no-restore

#build runtime image
FROM mcr.microsoft.com/dotnet/aspnet:6.0-alpine

